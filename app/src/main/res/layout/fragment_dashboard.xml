<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    tools:context=".Dashboard.Fragment_Dashboard">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/colorwhite"
        android:elevation="0dp"
        app:elevation="0dp"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_scrollFlags="scroll|enterAlways"
            android:gravity="center_horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:id="@+id/profil"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/profil"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/nama"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Fina Dini"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/email"

                        android:layout_height="wrap_content"
                        android:text="fina@papikos.com"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="16dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/notif"
                        android:src="@drawable/notif"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="16dp"
           android:paddingRight="16dp"
           android:paddingBottom="62dp"
           android:paddingTop="16dp"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:padding="16dp"
               android:orientation="horizontal"
               android:background="@drawable/round_blue">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorwhite"
                       android:textSize="20sp"
                       android:id="@+id/selamat_datang"
                       android:text="@string/welcome"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:text="@string/dashboard_desc"
                       android:textColor="@color/colorwhite"
                       android:textSize="15sp" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorwhite"
                       android:layout_marginTop="8dp"
                       android:textStyle="normal"
                       android:text="@string/next"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="180dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/working"/>
               </LinearLayout>
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:layout_marginTop="8dp"
               android:textStyle="bold"
               android:textColor="@color/colorBlack"
               android:text="@string/kategori"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:id="@+id/area"
                    android:orientation="vertical"
                    android:background="@drawable/box_blue">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/area"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kos Area"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="12sp"
                        android:gravity="center_horizontal" />
                </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:id="@+id/kontrakan"
                   android:layout_weight="1"
                   android:layout_margin="8dp"
                   android:orientation="vertical"
                   android:background="@drawable/box_blue">
                   <ImageView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/kontrakan"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Kontrakan"
                       android:textAlignment="center"
                       android:textColor="@color/colorGray"
                       android:textSize="12sp"
                       android:gravity="center_horizontal" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:id="@+id/rumahan"
                   android:layout_weight="1"
                   android:layout_margin="8dp"
                   android:orientation="vertical"
                   android:background="@drawable/box_blue">
                   <ImageView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/rumahan"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Kos Rumahan"
                       android:textAlignment="center"
                       android:textColor="@color/colorGray"
                       android:textSize="12sp"
                       android:gravity="center_horizontal" />
               </LinearLayout>
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:layout_marginTop="8dp"
               android:textStyle="bold"
               android:textColor="@color/colorBlack"
               android:text="@string/terbaru"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_gravity="center"
                   android:orientation="vertical"
                   android:id="@+id/not_found_terbaru"
                   android:visibility="gone"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:src="@drawable/empty"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:textSize="18sp"
                       android:textColor="@color/colorPrimary"
                       android:text="@string/empty_data"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_margin="8dp"
                       android:text="@string/empty_data_desc"/>
               </LinearLayout>
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:id="@+id/list_terbaru"
                   android:scrollbars="vertical"
                   android:layout_marginBottom="16dp"
                   android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:layout_marginTop="8dp"
               android:textStyle="bold"
               android:textColor="@color/colorBlack"
               android:text="@string/rekomendasi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_gravity="center"
               android:orientation="vertical"
               android:id="@+id/not_found_rekom"
               android:visibility="gone"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:src="@drawable/empty"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textSize="18sp"
                   android:textColor="@color/colorPrimary"
                   android:text="@string/empty_data"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_margin="8dp"
                   android:text="@string/empty_data_desc"/>
           </LinearLayout>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:id="@+id/list_rekom"
               android:scrollbars="vertical"
               android:layout_marginBottom="16dp"
               android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
       </LinearLayout>
    </ScrollView>
</LinearLayout>